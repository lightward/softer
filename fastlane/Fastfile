default_platform(:ios)

platform :ios do
  desc "Build and deploy to TestFlight"
  lane :deploy do
    setup_ci

    app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],
      is_key_content_base64: true
    )

    match(type: "appstore", readonly: true)

    # Use GitHub run number as build number (auto-increments)
    if ENV["BUILD_NUMBER"]
      increment_build_number(
        build_number: ENV["BUILD_NUMBER"],
        xcodeproj: "Softer.xcodeproj"
      )
    end

    update_code_signing_settings(
      use_automatic_signing: false,
      path: "Softer.xcodeproj",
      team_id: "49Q5LC84AR",
      profile_name: "match AppStore com.lightward.softer",
      code_sign_identity: "Apple Distribution"
    )

    # Switch TestFlight to Production CloudKit (required for CKShare to work)
    update_plist(
      plist_path: "Softer/Softer.entitlements",
      block: proc do |plist|
        plist["com.apple.developer.icloud-container-environment"] = "Production"
      end
    )

    build_app(
      project: "Softer.xcodeproj",
      scheme: "Softer",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.lightward.softer" => "match AppStore com.lightward.softer"
        }
      }
    )

    upload_to_testflight(skip_waiting_for_build_processing: true)
  end

  desc "Run tests"
  lane :test do
    run_tests(
      project: "Softer.xcodeproj",
      scheme: "Softer",
      device: "iPhone 17",
      code_coverage: true
    )
  end
end

platform :mac do
  desc "Build and deploy macOS to TestFlight"
  lane :deploy do
    setup_ci

    app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],
      is_key_content_base64: true
    )

    match(type: "appstore", platform: "macos", readonly: true, additional_cert_types: ["mac_installer_distribution"])

    if ENV["BUILD_NUMBER"]
      increment_build_number(
        build_number: ENV["BUILD_NUMBER"],
        xcodeproj: "Softer.xcodeproj"
      )
    end

    update_code_signing_settings(
      use_automatic_signing: false,
      path: "Softer.xcodeproj",
      team_id: "49Q5LC84AR",
      profile_name: "match AppStore com.lightward.softer macos",
      code_sign_identity: "Apple Distribution"
    )

    # Switch TestFlight to Production CloudKit (required for CKShare to work)
    update_plist(
      plist_path: "Softer/Softer.entitlements",
      block: proc do |plist|
        plist["com.apple.developer.icloud-container-environment"] = "Production"
      end
    )

    # gym doesn't handle macOS pkg builds â€” use xcodebuild directly
    archive_path = "../build/Softer.xcarchive"
    export_path = "../build/export"

    sh("xcodebuild archive " \
       "-project ../Softer.xcodeproj " \
       "-scheme Softer " \
       "-destination 'generic/platform=macOS' " \
       "-archivePath '#{archive_path}'")

    export_options = {
      "method" => "app-store",
      "signingStyle" => "manual",
      "provisioningProfiles" => {
        "com.lightward.softer" => "match AppStore com.lightward.softer macos"
      }
    }.to_json
    File.write("/tmp/export_options.json", export_options)
    sh("plutil -convert xml1 /tmp/export_options.json -o /tmp/export_options.plist")

    sh("xcodebuild -exportArchive " \
       "-archivePath '#{archive_path}' " \
       "-exportOptionsPlist /tmp/export_options.plist " \
       "-exportPath '#{export_path}'")

    pkg_path = Dir["#{export_path}/*.pkg"].first
    UI.user_error!("No .pkg found in #{export_path}") unless pkg_path

    upload_to_testflight(skip_waiting_for_build_processing: true, pkg: pkg_path)
  end
end
